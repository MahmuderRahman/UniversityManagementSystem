<div class="row" style="margin-top:30px">
    <div class="col-md-12">
        @*modal start*@
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Add Course</h4>
                    </div>

                    <div class="modal-body">
                        <form id="courseForm">

                            <div class="form-horizontal">

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Code</label>
                                    <div class="col-md-8">
                                        <input class="form-control" id="codeText" type="text" name="Code" value="" placeholder="Code" /> <span class="required">*</span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Name</label>
                                    <div class="col-md-8 ">
                                        <input class="form-control" id="nameText" type="text" name="Name" value="" placeholder="Name" /> <span class="required">*</span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Credit</label>
                                    <div class="col-md-8 ">
                                        <input class="form-control" id="creditText" type="text" name="Credit" value="" placeholder="Credit" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Description</label>
                                    <div class="col-md-8 ">
                                        <input class="form-control" id="descriptionText" type="text" name="Description" value=" " placeholder="Description" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Department</label>
                                    <div class="col-md-8 ">
                                        <select class="form-control" id="departmentDDL" name="DepartmentId"></select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Semester</label>
                                    <div class="col-md-8 ">
                                        <select class="form-control" id="semestertDDL" name="SemesterId"></select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-8">
                                        <button style="margin-right: 5px; width: 70px" id="saveButton" type="button" class="btn btn-success">Save</button>
                                        <input style="width: 70px" id="clearButton" type="reset" value="Clear" class="btn btn-primary" />
                                    </div>
                                    @*</div>*@
                                </div>
                            </div>
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        @*modal end*@
    </div>
    <div class="col-md-12 well table table-responsive">
        <div>
            <button id="openModalButton" data-toggle="modal" data-target="#myModal" class="btn btn-success">Add New</button>
        </div>
        <div style="padding-top: 30px">
            <table class="table table-bordered table-striped table-condensed" id="tableElement" style="width: 100%"></table>
        </div>
    </div>
</div>
<script src="~/Scripts/Custom/Course.js"></script>








@{
    ViewBag.Title = "Index";
}
<h4>Course Teacher</h4>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/Datatable/datatables.css" rel="stylesheet" />
<script src="~/Content/Datatable/datatables.js"></script>
<script src="~/Scripts/Library/lib/AjaxManager.js"></script>
<script src="~/Scripts/Library/lib/Messages.js"></script>
<link href="~/Content/notifIt.css" rel="stylesheet" />
<script src="~/Scripts/Library/lib/notifit.js"></script>

<div class="row" style="margin-top:30px">
    <div class="col-md-12">
        @*modal start*@
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Add Course Teacher</h4>
                    </div>

                    <div class="modal-body">
                        <form id="courseTeacherForm">

                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Department</label>
                                    <div class="col-md-8">
                                        <select class="form-control" id="departmentDDL" name="DepartmentId"></select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Teacher</label>
                                    <div class="col-md-8">
                                        <select class="form-control" id="teacherDDL" name="TeacherId"></select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Total Credit</label>
                                    <div class="col-md-8">
                                        <input class="form-control" id="totalCredit" type="text" readonly="readonly" value="" placeholder="Total Credit" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Remaining Credit</label>
                                    <div class="col-md-8">
                                        <input class="form-control" id="remainingCredit" type="text" readonly="readonly" value="" placeholder="Remaining Credit" />
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label"> Course</label>
                                    <div class="col-md-8">
                                        <select class="form-control" id="courseDDL" name="CourseId"></select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Name</label>
                                    <div class="col-md-8">
                                        <input class="form-control" id="nameText" type="text" readonly="readonly" value="" placeholder="Name" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Credit</label>
                                    <div class="col-md-8">
                                        <input class="form-control" id="creditText" type="text" readonly="readonly" value="" placeholder="Credit" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-8">
                                        <button style="margin-right: 5px; width: 70px" id="assignButton" type="button" class="btn btn-success">Assign</button>
                                        <input style="width: 70px" id="clearButton" type="reset" value="Clear" class="btn btn-primary" />
                                    </div>
                                    @*</div>*@
                                </div>
                            </div>
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        @*modal end*@
    </div>
    <div class="col-md-12 well table table-responsive">
        <div>
            <button id="openModalButton" data-toggle="modal" data-target="#myModal" class="btn btn-success">Add New</button>
        </div>
        <div style="padding-top: 30px">
            <table class="table table-bordered table-striped table-condensed" id="tableElement" style="width: 100%"></table>
        </div>
    </div>
</div>
<script src="~/Scripts/Custom/CourseTeacher.js"></script>

